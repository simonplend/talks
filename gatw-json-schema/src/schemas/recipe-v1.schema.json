{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "ingredients"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "ingredients": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "time": {
      "type": "integer",
      "minimum": 1
    }
  }
}
